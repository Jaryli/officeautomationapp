<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardUseCompatPadding="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center" />

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="物资名称"
                            android:textColor="@color/black"
                            android:textSize="@dimen/title_text_size" />

                        <EditText
                            android:id="@+id/wz_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="7"
                            android:background="@null"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:hint="请选择物资名称"
                            android:singleLine="true"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="验收数量"
                            android:textColor="@color/black"
                            android:textSize="@dimen/title_text_size" />

                        <EditText
                            android:id="@+id/numInfo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="7"
                            android:background="@null"
                            android:ellipsize="end"
                            android:hint="请输入验收数量"
                            android:singleLine="true"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="修剪要求"
                            android:textColor="@color/black"
                            android:textSize="@dimen/title_text_size" />

                        <EditText
                            android:id="@+id/xiuJianReq"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="7"
                            android:background="@null"
                            android:ellipsize="end"
                            android:hint="请输入修剪要求"
                            android:singleLine="true"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="绕干要求"
                            android:textColor="@color/black"
                            android:textSize="@dimen/title_text_size" />

                        <EditText
                            android:id="@+id/raoGanReq"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="7"
                            android:background="@null"
                            android:ellipsize="end"
                            android:hint="请输入绕干要求"
                            android:singleLine="true"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="到场时间"
                            android:textColor="@color/black"
                            android:textSize="@dimen/title_text_size" />

                        <EditText
                            android:id="@+id/arriveDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="7"
                            android:background="@null"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:hint="请选择到场时间"
                            android:singleLine="true"
                            android:textSize="15dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="供应商"
                            android:textColor="@color/black"
                            android:textSize="@dimen/title_text_size" />

                        <EditText
                            android:id="@+id/supplyName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="7"
                            android:background="@null"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:hint="请选择供应商"
                            android:singleLine="true"
                            android:textSize="15dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="验收胸径"
                            android:textColor="@color/black"
                            android:textSize="@dimen/title_text_size" />

                        <EditText
                            android:id="@+id/ysXiongJing"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="7"
                            android:background="@null"
                            android:ellipsize="end"
                            android:hint="请输入验收胸径"
                            android:singleLine="true"
                            android:textSize="15dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="验收高度"
                            android:textColor="@color/black"
                            android:textSize="@dimen/title_text_size" />

                        <EditText
                            android:id="@+id/ysHeight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="7"
                            android:background="@null"
                            android:ellipsize="end"
                            android:hint="请输入验收高度"
                            android:singleLine="true"
                            android:textSize="15dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="验收蓬径"
                            android:textColor="@color/black"
                            android:textSize="@dimen/title_text_size" />

                        <EditText
                            android:id="@+id/ysPengXing"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="7"
                            android:background="@null"
                            android:ellipsize="end"
                            android:hint="请输入验收蓬径"
                            android:singleLine="true"
                            android:textSize="15dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="付款状态"
                            android:textColor="@color/black"
                            android:textSize="@dimen/title_text_size" />

                        <!--<EditText-->
                            <!--android:id="@+id/isPay"-->
                            <!--android:layout_width="0dp"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_marginLeft="10dp"-->
                            <!--android:layout_weight="7"-->
                            <!--android:background="@null"-->
                            <!--android:ellipsize="end"-->
                            <!--android:focusable="false"-->
                            <!--android:hint="请选择付款状态"-->
                            <!--android:singleLine="true"-->
                            <!--android:textSize="15dp" />-->

                        <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="7">
                            <com.kyleduo.switchbutton.SwitchButton
                                android:id="@+id/isPay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="9"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:textSize="@dimen/title_text_size"
                                android:textColor="@color/black"
                                android:text="添加照片"/>
                            <ImageView
                                android:layout_width="30dp"
                                android:background="@mipmap/icon_camera"
                                android:id="@+id/iv_pic_select"
                                android:layout_height="30dp"
                                android:layout_marginRight="10dp"/>
                        </LinearLayout>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:overScrollMode="never" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_post"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="50dp"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btn_post"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/circle_semi_button_blue"
                            android:gravity="center"
                            android:text="提交"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="-5dp" />

    </FrameLayout>

</android.support.v7.widget.CardView>
