<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent" android:layout_gravity="center"
    android:layout_height="70dp">


    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="15sp"
        android:id="@+id/tv_task_p"
        android:textColor="#ff5d5d5d"
        android:background="@drawable/task_button_bule"
        android:text="新的任务"
        android:layout_margin="10dp"/>

    <TextView

        android:layout_centerInParent="true"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:textStyle="bold"
        android:text="我的消息"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:id="@+id/tv_task_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="07:35"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:id="@+id/tv_task_time"/>

</LinearLayout>