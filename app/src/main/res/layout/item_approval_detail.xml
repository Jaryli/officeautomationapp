<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/titleColor"
    android:layout_height="60dp">
    <LinearLayout
        android:layout_width="20dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:id="@+id/picture1"
        >
        <View
            android:layout_width="1dip"
            android:layout_height="20dp"
            android:id="@+id/approval_pic1"
            android:layout_gravity="center"
            android:background="@color/line"
            />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:background="@mipmap/approved_2x"
            android:id="@+id/approval_pic2"/>

        <View
            android:layout_width="1dip"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:id="@+id/approval_pic3"
            android:background="@color/line"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/picture1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/qipaopao">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/picture">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"
                android:id="@+id/approval_pic"
                android:background="@drawable/circle_textview_blue"
                android:gravity="center"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="我的的"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/picture"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="我的消息"
                android:textSize="13sp"
                android:id="@+id/approval_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:textColor="@color/blue"
                android:text="有您的消息"
                android:id="@+id/approval_type"/>
        </LinearLayout>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:id="@+id/approval_time"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:text="15:12:30"/>

    </RelativeLayout>

</RelativeLayout>